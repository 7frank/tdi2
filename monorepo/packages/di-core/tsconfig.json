{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@tdi2/di-core/*": ["./src/*"]
    },
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["react", "node"]
  },
  "include": ["src/**/*"]
}
