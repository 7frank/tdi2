{
  "name": "@tdi2/logging",
  "version": "0.1.0",
  "description": "TDI2 Logging - OpenTelemetry-based logging system with console monkey-patching",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./types": {
      "import": "./src/types.ts",
      "types": "./src/types.ts"
    },
    "./console": {
      "import": "./src/console-monkey-patch.ts",
      "types": "./src/console-monkey-patch.ts"
    },
    "./otel": {
      "import": "./src/otel-logger-provider.ts",
      "types": "./src/otel-logger-provider.ts"
    },
    "./service": {
      "import": "./src/tdi-logger-service.ts",
      "types": "./src/tdi-logger-service.ts"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "bun test",
    "lint": "echo 'No linting configured yet'",
    "check-types": "tsc --noEmit"
  },
  "keywords": [
    "logging",
    "opentelemetry",
    "typescript",
    "dependency-injection",
    "console",
    "monkey-patch"
  ],
  "author": "TDI2 Team",
  "license": "MIT",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/api-logs": "^0.202.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-logs": "^0.202.0",
    "@opentelemetry/semantic-conventions": "^1.27.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "typescript": "~5.8.3",
    "tsup": "^8.5.0"
  },
  "peerDependencies": {
    "@tdi2/di-core": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@tdi2/di-core": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/**/*",
    "dist/**/*",
    "*.d.ts",
    "README.md"
  ]
}