{
  "name": "@tdi2/plugin-core",
  "version": "1.0.0",
  "description": "Shared utilities for TDI2 build tool plugins",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "tdi2",
    "dependency-injection",
    "plugin",
    "build-tools",
    "vite",
    "webpack",
    "rollup",
    "esbuild",
    "babel"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/7frank/tdi2.git",
    "directory": "packages/plugin-core"
  },
  "bugs": {
    "url": "https://github.com/7frank/tdi2/issues"
  },
  "homepage": "https://github.com/7frank/tdi2#readme",
  "license": "MIT",
  "author": "7frank",
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@tdi2/di-core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
