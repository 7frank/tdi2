{
  "name": "@tdi2/typescript-transformer",
  "version": "1.0.0",
  "description": "TypeScript custom transformer for TDI2 dependency injection via ts-patch",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "typescript",
    "transformer",
    "ts-patch",
    "dependency-injection",
    "di",
    "tdi2",
    "compiler-plugin",
    "custom-transformer"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/7frank/tdi2.git",
    "directory": "packages/typescript-transformer"
  },
  "bugs": {
    "url": "https://github.com/7frank/tdi2/issues"
  },
  "homepage": "https://github.com/7frank/tdi2#readme",
  "license": "MIT",
  "author": "7frank",
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@tdi2/di-core": "workspace:*"
  },
  "peerDependencies": {
    "ts-patch": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "ts-patch": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
